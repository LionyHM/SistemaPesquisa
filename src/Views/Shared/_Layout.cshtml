<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Pesquisas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-flatty.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaPesquisa.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Protest+Guerrilla&display=swap" rel="stylesheet">
</head>
<body> 
    
    <button id="menuToggle" class="menu-toggle mostrar" aria-label="Toggle menu">&#9776;</button> <!-- Botão de menu -->
    <div class="sidebar">
        <a class="navbar-brand d-block text-center mt-5" href="/" aria-label="Home">
            <p>SistemaPesquisa</p>
        </a>
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="/" aria-label="Página Inicial">
                <i class="fas fa-home" title="Página Inicial"></i> <!-- Ícone de casa -->
                <span class="">Página Inicial</span> <!-- Texto visível apenas em telas maiores -->
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Formularios" aria-label="Responder Pesquisa">
                    <i class="fas fa-clipboard-list" title="Responder"></i> <!-- Ícone de pesquisa -->
                <span class="">Responder Pesquisa</span> <!-- Texto visível apenas em telas maiores -->
            </a>
        </li>
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link" href="/Setores" aria-label="Setores">
                        <i class="fas fa-building" title="Setores"></i> <!-- Ícone de setores -->
                    <span class="">Setores</span> <!-- Texto visível apenas em telas maiores -->
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Pesquisas" aria-label="Pesquisas">
                        <i class="fas fa-search" title="Pesquisas"></i> <!-- Ícone de pesquisas -->
                    <span class="">Pesquisas</span> <!-- Texto visível apenas em telas maiores -->
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Register" asp-route-returnUrl=@string.Format("{0}{1}", Context.Request.Path, Context.Request.QueryString) style="color: white;">&nbsp; Cadastrar Usuário &nbsp;</a>
             </li>
        }
        @await Html.PartialAsync("_LoginPartial")
    </ul>
    </div>
    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-muted">
        <div class="container">
            &copy; 2024 - Sistema de Pesquisas <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const menuToggle = document.getElementById('menuToggle');
            const sidebar = document.querySelector('.sidebar');
            const mainContent = document.querySelector('.main-content');

            menuToggle.addEventListener('click', () => {
                if (sidebar.classList.contains('escondido')) {
                    sidebar.classList.add('mostrar');
                    sidebar.classList.remove('escondido');

                } else {
                    sidebar.classList.add('escondido');
                    sidebar.classList.remove('mostrar');
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
