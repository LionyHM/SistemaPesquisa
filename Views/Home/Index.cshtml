@{
    ViewData["Title"] = "Home Page";
    var setor = Context.Session.GetString("SetorNome");
}
<style>
    .container_home{
        flex-wrap: wrap;
        height: 600px;
        overflow: auto;
        transform: translateY(25%)
    }
    .home_img img{
        width: 100%;
       /* opacity: 0.5;  Ajuste a opacidade conforme necessário */
    }

    .home_img:nth-child(2) {
        padding-top: 70px;
    }

    .home_img{
        position:relative;
        width: 700px;
       /*  border: 1px solid gray; */
    }

    .home_img:hover{   
        cursor: pointer;
    }

    .overlay {
        position: absolute;
        display: flex;
        justify-content: center;
        align-items: center;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(50, 50, 50, 0.8); /* Cor de fundo e opacidade para a camada */
        color: white;
        font-size: 45px;
        font-weight: bold;
        text-align: center;
        pointer-events: none; /* Permite clicar na imagem por baixo */
        border-radius: 10px;
    }
</style>

<div class="d-flex justify-content-center container_home">
    <div class="home_img">
        <a class="nav-link text-dark" asp-area="" asp-controller="Formularios" asp-action="Index"><img src="\checklist.png" /></a>
        <div class="overlay" hidden>Responder Pesquisa</div>
    </div>
    <div class="home_img">
        <img src="\charts.png" />
        <div class="overlay" hidden>Relatório</div>
    </div>
    
</div>
@* <h3>@setor</h3> *@
<script>

    for (let i = 0; i < document.querySelectorAll('.home_img').length; i++) {

        document
            .querySelectorAll('.home_img')[i]
            .addEventListener('mouseover', e => document.querySelectorAll('.overlay')[i]
            .removeAttribute('hidden'))

        document
            .querySelectorAll('.home_img')[i]
            .addEventListener('mouseout', e => document.querySelectorAll('.overlay')[i]
                .setAttribute('hidden', true))
       
    }

</script>

